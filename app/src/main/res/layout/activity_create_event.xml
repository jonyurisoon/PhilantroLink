<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CreateEventActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/CreateEventToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sky_blue"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter event details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="12dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter email to provide a credible authenticated event please enter needed details below."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:drawablePadding="20dp"
        />

    <EditText
        android:id="@+id/EmailEventDetails"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_bg"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        android:drawablePadding="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="12dp"
        android:text="Continue with email"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <View
        android:layout_width="300dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <Button
        android:id="@+id/CharityEventButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="Charity Event"
        android:drawableLeft="@drawable/ic_charityevents"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="Volunteer Event"
        android:drawableLeft="@drawable/ic_volunteerevent"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="Donation Event"
        android:drawableLeft="@drawable/ic_fundraisingevent"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="Call out for help event"
        android:drawableLeft="@drawable/ic_callforhelp"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>