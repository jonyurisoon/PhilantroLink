<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SocialDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/SocialToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/sky_blue" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="200dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_profilepic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-120dp"
            android:layout_marginLeft="200dp"
            android:text="Yuri Soon"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yuri Soon"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="100dp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_profileevent"
            android:drawablePadding="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/treeplanting"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join us for a day of camaraderie, environmental stewardship, and community pride as we come together to clean up and revitalize our neighborhood!"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:drawablePadding="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Comment"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_profileevent"
            android:drawablePadding="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tyrone John Tarona"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_profileevent"
            android:drawablePadding="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/cancerpatient"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:drawablePadding="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Comment"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_profileevent"
            android:drawablePadding="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jade Russel Tesoro"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_profileevent"
            android:drawablePadding="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/cleanup"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:drawablePadding="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Comment"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:drawableLeft="@drawable/ic_profileevent"
            android:drawablePadding="20dp" />

    </LinearLayout>
</ScrollView>
