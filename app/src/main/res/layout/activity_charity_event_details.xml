<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CharityEventDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/CharityEventDetailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sky_blue"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's fill in event details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="12dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now that we're ready to proceed, please provide  event details by filling in the fields below."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:drawablePadding="20dp"
        />

    <EditText
        android:id="@+id/EventNameDetails"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:hint="Event name"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:background="@drawable/edittext_bg"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/EventDescriptionDetails"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:hint="Event description"
        android:inputType="text"
        android:background="@drawable/edittext_bg"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/EventLocationDetails"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:hint="    Event location"
        android:drawableLeft="@drawable/ic_location"
        android:inputType="text"
        android:background="@drawable/edittext_bg"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/EventDateDetails"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:hint="    Event date"
        android:inputType="date"
        android:drawableLeft="@drawable/ic_calendar"
        android:background="@drawable/edittext_bg"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/EventImageDetails"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:hint="    Event image"
        android:inputType="text"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_addevent"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/CreateEventButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        android:drawablePadding="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:padding="12dp"
        android:text="Create event"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>